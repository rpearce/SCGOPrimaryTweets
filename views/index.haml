      /
      / %br
      .date-info
        = "#{(Date.today.to_time).strftime('%b %e %Y %l:%M%P')} EST &rarr; #{((Date.today + 1).to_time - 60).strftime('%b %e %Y %l:%M%P')} EST"
      %table
        %th
        %th Charleston
        %th Columbia
        %th Greenville
        %th Myrtle Beach
        %th Today's Total
        %th{:style => 'width:100px'} SC Campaign Total
        %tr
          %td.candidate-pic
            %img{:src =>'images/gingrich.png'}
            %br
            Gingrich
