      /     %td.data.daily_total= debate_totals[:romney]
      /     %td.data= tweet_totals[:romney_total]
      /   %tr
      /     %td.candidate-pic
      /       %img{:src =>'images/santorum.png'}
      /       %br
      /       Santorum
      /     %td.data= charleston_debate[:santorum_tweets].count
      /     %td.data= columbia_debate[:santorum_tweets].count
      /     %td.data= greenville_debate[:santorum_tweets].count
