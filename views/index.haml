!!!
%html
  %head
    %title SCGOPrimary Tweets
    %link{:rel => 'stylesheet', :href => 'css/application.css', :type => 'text/css'}
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => 'refresh', :content => '120'}
  %body
    .content
      .date-info
        = "#{(Date.today.to_time).strftime('%b %e %Y %l:%M%P')} EST &rarr; #{((Date.today + 1).to_time - 60).strftime('%b %e %Y %l:%M%P')} EST"
        /= "January 19 2012 8pm EST &rarr; January 19 2012 10pm EST"
      %table
        %th
        %th Charleston
        %th Columbia
        %th Greenville
        %th Myrtle Beach
        %th Today's Total
        %th{:style => 'width:100px'} SC Campaign Total
        %tr
          %td.candidate-pic
            %img{:src =>'images/gingrich.png'}
            %br
            Gingrich
          %td.data= charleston[:gingrich_tweets].count
          %td.data= columbia[:gingrich_tweets].count
          %td.data= greenville[:gingrich_tweets].count
          %td.data= myrtle_beach[:gingrich_tweets].count
          %td.data.daily_total= daily_totals[:gingrich]
          %td.data= tweet_totals[:gingrich_total]
        %tr
          %td.candidate-pic
            %img{:src =>'images/paul.png'}
            %br
            Paul
          %td.data= charleston[:paul_tweets].count
          %td.data= columbia[:paul_tweets].count
          %td.data= greenville[:paul_tweets].count
          %td.data= myrtle_beach[:paul_tweets].count
          %td.data.daily_total= daily_totals[:paul]
          %td.data= tweet_totals[:paul_total]
        %tr
          %td.candidate-pic
            %img{:src =>'images/romney.png'}
            %br
            Romney
          %td.data= charleston[:romney_tweets].count
          %td.data= columbia[:romney_tweets].count
          %td.data= greenville[:romney_tweets].count
          %td.data= myrtle_beach[:romney_tweets].count
          %td.data.daily_total= daily_totals[:romney]
          %td.data= tweet_totals[:romney_total]
        %tr
          %td.candidate-pic
            %img{:src =>'images/santorum.png'}
            %br
            Santorum
          %td.data= charleston[:santorum_tweets].count
          %td.data= columbia[:santorum_tweets].count
          %td.data= greenville[:santorum_tweets].count
          %td.data= myrtle_beach[:santorum_tweets].count
          %td.data.daily_total= daily_totals[:santorum]
          %td.data= tweet_totals[:santorum_total]
        / %tr
        /   %td.candidate-pic
        /     Total unique tweets
        /   %td= charleston[:unique_tweets].count
        /   %td= columbia[:unique_tweets].count
