        %td= myrtle_beach[:paul_tweets].count
      %tr
        %td.candidate_name Mitt Romney
        %td= charleston[:romney_tweets].count
        %td= columbia[:romney_tweets].count
        %td= greenville[:romney_tweets].count
        %td= myrtle_beach[:romney_tweets].count
      %tr
        %td.candidate_name Rick Santorum
        %td= charleston[:santorum_tweets].count
